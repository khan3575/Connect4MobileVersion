#:kivy 2.1.0

<Cell>:
    canvas:
       
        Color:
            rgba: .02, .05, .10, 1
        Ellipse:
            pos: self.pos
            size: self.size

     
        Color:
            rgba: .08, .12, .25, 1
        Ellipse:
            pos: self.x + 2, self.y + 2
            size: self.width - 4, self.height - 4

        
        Color:
            rgba: (1, .2, .2, 1) if self.player == 1 else (1, 1, .2, 1) if self.player == 2 else (0, 0, 0, 0)
        Ellipse:
            pos: self.x + self.width * .1, self.y + self.height * .1
            size: self.width * .8, self.height * .8

        
        Color:
            rgba: (1, 1, 1, .3) if self.player else (0, 0, 0, 0)
        Ellipse:
            pos: self.x + self.width * .15, self.y + self.height * .55
            size: self.width * .3, self.height * .3

<GameGrid>:
    # purely a container; touches handled in Python
